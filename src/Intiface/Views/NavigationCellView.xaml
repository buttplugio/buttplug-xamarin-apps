<?xml version="1.0" encoding="UTF-8"?>
<rxui:ReactiveViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
                       xmlns:local="clr-namespace:Intiface"
                       xmlns:rxui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="Intiface.Views.NavigationCellView"
                       x:TypeArguments="local:ViewModels.NavigationEntry">
  <ViewCell.View>
        <StackLayout Padding="15,10" HorizontalOptions="FillAndExpand">
            <Image WidthRequest="50" />
            <Label x:Name="Title"
                   Margin="40, 0, 0, 0"
                   VerticalOptions="FillAndExpand" 
                   VerticalTextAlignment="Center" 
                   FontSize="24"/>
        </StackLayout>
    </ViewCell.View>
</rxui:ReactiveViewCell>